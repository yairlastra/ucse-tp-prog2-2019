@model WebApp.Models.MVCGridToolbarModel
@{
	string gridName = Model.MVCGridName;
}

<div class="row">
	<div class="col-md-6">
		<div class="form-inline pull-left search-filter">
			<div class="btn-group">
				@if (Model.ColumnVisibility)
				{
					<div class="btn-group">
						<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
							<span class="glyphicon glyphicon-list" aria-hidden="true"></span> Campos
						</button>
						<ul class="dropdown-menu" role="menu" data-mvcgrid-type="columnVisibilityList" data-mvcgrid-name="@(gridName)"></ul>
					</div>
				}
				@if (Model.Export)
				{
					<button class="btn btn-default" data-mvcgrid-type="export" data-mvcgrid-name="@(gridName)">
						<span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span> Exportar
					</button>
				}
			</div>

			@if (Model.GlobalSearch || Model.NewButton)
			{

				<span>&nbsp;</span>
					<div class="form-group global-search">
						<div class="input-group">
							@if (Model.GlobalSearch)
							{
								<input type="search" placeholder="@Model.TextLabel" class="form-control" value="@Request.QueryString["search"]"
										 data-mvcgrid-type="additionalQueryOption" data-mvcgrid-option="search" data-mvcgrid-name="@(gridName)"
										 data-mvcgrid-apply-additional="keyup" aria-describedby="search-addon" style="width:90%" />
							}
							@if (Model.NewButton)
							{
								<a class="btn btn-primary pull-right" data-modal="" onclick="javascript:getForm(this)" data-href="@Model.NewLink" id="btnCreate">
									<span class="glyphicon glyphicon-plus"></span>
								</a>
							}
						</div>
					</div>
			}
		</div>
	</div>
	<div class="col-md-6">
		<div class="form-inline">
			@if (Model.PageSize)
			{
				<div class="form-group pull-right">
					<label class="grid-cantidad-registros">
						Cantidad de registros:
						<select class="form-control pagesize-options" data-mvcgrid-type="pageSize" data-mvcgrid-name="@(gridName)">
							<option value="10">10</option>
							<option value="15">15</option>
							<option value="25">25</option>
							<option value="50">50</option>
							<option value="100">100</option>
							<option value="500">500</option>
							<option value="5000">5000</option>
						</select>
					</label>
				</div>
			}
		</div>
	</div>
</div>